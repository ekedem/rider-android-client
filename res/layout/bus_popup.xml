<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/busLayout"
    >
    
    <ImageView 
   	    android:id="@+id/busImage"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/bus_empty"
    	android:layout_centerHorizontal="true"
    />
    
   <TextView 
   		android:id="@+id/stationNameText"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="14dp"
    	android:textColor="#FFF"
    	android:layout_marginTop="10dp"
    	android:layout_marginRight="8dp"
    	android:layout_alignRight="@id/busImage"
   	/>
   
   <Button 
        android:id="@+id/okButtonBus"
    	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="9dp"
    	android:layout_marginBottom="8dp"
    	android:layout_alignBottom="@id/busImage"
    	android:layout_alignLeft="@id/busImage"
    	android:background="@layout/ok_button"
    	android:enabled="true"/>
   
</RelativeLayout>
